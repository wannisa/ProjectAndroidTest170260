<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:background="#DDDDDD"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/doctoricon"
            android:id="@+id/doctoricon"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="คำนวณวันตกไข่"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="นัดคุณหมอ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp" />

        <TextView
            android:text="ค้นคว้าบทความ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView9" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/faqicon"
            android:id="@+id/faqicon"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView10" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/calendaricon"
            android:id="@+id/calendaricon"
            android:layout_marginRight="350dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />

        <TextView
            android:text="แจ้งเตือนยา"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/drugicon" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/drugicon"
            android:id="@+id/drugicon"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="20dp"
            android:layout_above="@+id/textView9"
            android:layout_toEndOf="@+id/textView8" />
    </RelativeLayout>


    <Button
        android:text="ยกเลิก"
        android:layout_width="300dp"
        android:layout_height="50dp"
        style="@style/btn_color"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/canceldoctor"
        android:layout_below="@+id/showcalendardoctor"
        android:layout_alignStart="@+id/showcalendardoctor"
        android:layout_marginTop="126dp" />

    <Button
        android:text="นัดคุณหมอ"
        android:layout_width="300dp"
        android:layout_height="50dp"
        style="@style/btn_color"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/showcalendardoctor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="กรุณาใส่ชื่อและเบอร์โทรศัพท์ของท่านตรงช่องคำอธิบาย"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/showcalendardoctor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />


</RelativeLayout>